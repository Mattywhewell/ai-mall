{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "type": "array",
      "items": { "$ref": "#/definitions/finding" }
    },
    {
      "type": "object",
      "properties": {
        "findings": {
          "type": "array",
          "items": { "$ref": "#/definitions/finding" }
        }
      },
      "required": ["findings"]
    }
  ],
  "definitions": {
    "finding": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "classification": { "type": "string", "enum": ["Additive","Corrective","Destructive","additive","corrective","destructive"] },
        "confidence": { "type": "integer", "minimum": 0, "maximum": 100 },
        "impact": { "type": "string", "enum": ["low","medium","high","Low","Medium","High"] },
        "severity": { "type": "string" },
        "object_type": { "type": "string" },
        "kind": { "type": "string" },
        "schema": { "type": "string" },
        "object_name": { "type": "string" },
        "name": { "type": "string" },
        "dependencies": { "type": "array", "items": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } },
        "affects": { "type": "array", "items": { "anyOf": [ { "type": "string" }, { "type": "object" } ] } },
        "suggested_sql": { "type": "string" },
        "test_plan": { "type": "string" },
        "reason": { "type": "string" }
      },
      "required": ["classification"],
      "additionalProperties": true
    }
  }
}