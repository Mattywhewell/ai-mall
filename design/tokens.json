{
  "$schema": "https://example.com/schemas/tokens.schema.json",
  "name": "aiverse.tokens",
  "colors": {
    "brand": {
      "midnight": { "value": "#0A0F1F", "comment": "Primary viewport background" },
      "slate": { "value": "#1C2333", "comment": "Secondary panels, cards" },
      "indigo": { "value": "#5A2EBE", "comment": "Brand accent mid" },
      "neonCyan": { "value": "#00E5FF", "comment": "Interactive highlight / glow" },
      "lavender": { "value": "#C7B7FF", "comment": "Soft highlight / accent" },
      "warmGold": { "value": "#F4C76E", "comment": "Ritual accents / CTAs" },
      "tealMist": { "value": "#A8FFF1", "comment": "Secondary soft accent" },
      "white": { "value": "#FFFFFF", "comment": "Primary text on dark" }
    },

    "semantic": {
      "bgViewport": { "value": "{colors.brand.midnight}", "comment": "Root viewport background" },
      "bgCard": { "value": "rgba(28,35,51,0.88)", "comment": "Card surface" },
      "textPrimary": { "value": "{colors.brand.white}" },
      "textSecondary": { "value": "#D8D8E8" },
      "accentPrimary": { "value": "{colors.brand.neonCyan}" },
      "accentRitual": { "value": "{colors.brand.warmGold}" },
      "glowStrong": { "value": "rgba(0,229,255,0.28)" },
      "glowSoft": { "value": "rgba(199,183,255,0.14)" }
    }
  },

  "spacing": {
    "xxs": { "value": "4" },
    "xs": { "value": "8" },
    "sm": { "value": "12" },
    "md": { "value": "24" },
    "lg": { "value": "40" },
    "xl": { "value": "64" },
    "xxl": { "value": "96" }
  },

  "typography": {
    "fontPrimary": { "value": "Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue'" },
    "fontSerif": { "value": "Spectral, 'Times New Roman', serif" },
    "scale": {
      "h1": { "value": "64" },
      "h2": { "value": "32" },
      "h3": { "value": "24" },
      "lead": { "value": "20" },
      "body": { "value": "18" },
      "small": { "value": "14" }
    }
  },

  "motion": {
    "duration": {
      "fast": { "value": "150ms" },
      "medium": { "value": "260ms" },
      "slow": { "value": "600ms" }
    },
    "ease": {
      "standard": { "value": "cubic-bezier(.22,1,.36,1)" },
      "soft": { "value": "cubic-bezier(.25,.8,.25,1)" }
    }
  },

  "shadows": {
    "card": { "value": "0 4px 16px rgba(10,15,31,0.35)" },
    "cta": { "value": "0 10px 40px rgba(0,229,255,0.08)" }
  }
}
