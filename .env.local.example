# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Stripe Configuration (for payments and payouts)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Connect (for supplier payouts)
STRIPE_CONNECT_CLIENT_ID=ca_your-connect-client-id-here

# Cron Job Security (for automated payouts and jobs)
CRON_SECRET=your-secure-random-string-here

# CJdropshipping API Key
CJ_API_KEY=your_cj_api_key_here

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# Telemetry / Alerts
# Optional: Redis URL to backdedupe/aggregation for telemetry alerts. Leave blank to use in-memory store.
TELEMETRY_REDIS_URL=
# Enable Redis-backed dedupe (default false). When true and TELEMETRY_REDIS_URL is set, uses Redis for cross-worker counting.
TELEMETRY_REDIS_ENABLED=false
# Webhooks for alerts. Configure one or both.
TELEMETRY_ALERT_WEBHOOK_DEFAULT=
TELEMETRY_ALERT_WEBHOOK_CRITICAL=
# Number of events in window to trigger an alert (defaults to 3 per minute)
TELEMETRY_ALERT_THRESHOLD=3

# Aggregation and Redis options for telemetry alerts
# Enable Redis-backed aggregation/dedupe (default false). When true and TELEMETRY_REDIS_URL is set,
# the aggregation module will use Redis for cross-worker aggregation.
TELEMETRY_AGGREGATION_ENABLED=false
TELEMETRY_AGGREGATION_WINDOW_MS=60000
TELEMETRY_AGGREGATION_SAMPLE_SIZE=3

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
