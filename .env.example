# Example .env.local file

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your-publishable-key-here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Stripe Configuration (for payments and payouts)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Connect (for supplier payouts)
STRIPE_CONNECT_CLIENT_ID=ca_your-connect-client-id-here

# Cron Job Security
CRON_SECRET=your-secure-random-string-here

# Redis Configuration (for production rate limiting)
REDIS_URL=redis://localhost:6379
# For Redis Cloud or other providers, use format:
# REDIS_URL=redis://username:password@host:port

# Email Configuration (Resend)
RESEND_API_KEY=re_your-resend-api-key-here

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Email Service (Resend)
RESEND_API_KEY=re_your-resend-api-key-here
